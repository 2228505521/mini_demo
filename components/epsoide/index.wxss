/* components/epsoide/index.wxss */

.container {
    display: inline-flex;
    flex-direction: row;
    align-items: flex-end;
    height: 60rpx;
}

.index-container {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    height: 60rpx;
}

.index-container .no {
    font-size: 24rpx;
    color: #cbcbcb;
}

.index-container .index {
    font-weight: bold;
    font-size: 60rpx;
    line-height: 60rpx;
    color: #000;
}

.index-container .line {
    width: 1px;
    height: 44rpx;
    background: black;
    margin-right: 6px;
    margin-left: 6px;
    margin-bottom: 4px;
}

.date-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 8rpx;
    height: 60rpx;
}

.date-container .month {
    font-size: 22rpx;
}

.date-container .year {
    font-size: 18rpx;
}
